{% block body %}
<div class="container">

	<div class="form-group">
		<label for="exampleFormControlTextarea1">Commentaire :</label>
		<textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
	</div>
	{% if  app.user %}
		{{ form_row(form.comment)}}


	{% else %}
		<p>Vous devez être
			<a href="{{ path('app_register') }}">inscrit
			</a>
			ou
			<a href="{{ path('app_login') }}">connecté
			</a>
			pour écrire un commentaire</p>

	{% endif %}


	{% for comment in tricks.comments %}
		<div class="container">

			<div class="col-sm-12">
				<div class="card">
					<div class="card-body">
						<div class="row">
							<div class="col-md-2">
								<img src="{{comment.user.avatar}}" class="img img-rounded img-fluid">


								<p class="text-secondary text-center m-0">{{ comment.user.name }}</p>

								<p class="text-secondary text-center m-0">{{ comment.CreatedAt|date("${m/d/Y}") }}</p>
							</div>
							<div class="col-md-10">
								<div class="clearfix"></div>
								<p>{{ comment.comment }}</p>
							</div>


						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endfor %}


       <ul class="pagination">
        <li class="{{ (page == 1) ? 'disabled' : '' }}">
            <a href="?page=1">
                <i class="fas fa-step-backward"></i>
            </a>
        </li>    
        <li class="{{ (page == 1) ? 'disabled' : '' }}">
            <a href="{{ (page > 1) ? '?page=' ~ (page - 1) : '' }}">
                <i class="fas fa-angle-left"></i>
            </a>
        </li>
        {% set pages = (total / limit)|round(0, 'ceil') %}
        {% for item in 1..pages %}
            <li class="{{ (page == item) ? 'active' : '' }}">
                <a href="?page={{ item }}">{{ item }}</a>
            </li>
        {% endfor %}
        <li class="{{ (page == pages) ? 'disabled' : '' }}">
            <a href="{{ (page < pages) ? '?page=' ~ (page + 1) : '' }}">
                <i class="fas fa-angle-right"></i>
            </a>
        </li>
        <li class="{{ (page == pages) ? 'disabled' : '' }}">
            <a href="?page={{ pages }}">
                <i class="fas fa-step-forward"></i>
            </a>
        </li>

    </ul>
 



{% endblock %}
